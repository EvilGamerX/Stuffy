@using Blazor.Diagrams.Components.Renderers
@using Stuffy.Website.Client.Models;

<div id="@Node.Data.Id" class="circle" style="background-color:@Node.Data.ColourCode">
    <p>@Node.Data.Name</p>
    @foreach (var port in Node.Ports)
    {
        <!-- Default ports -->
        <PortRenderer Port="port" />
    }
</div>

<style>
    .circle {
        outline-color: black; 
        outline-style: solid;
        width:100px; 
        height:100px; 
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-content: center;
        flex-direction: column;
        align-items: center;
    }

    p {
    color: white;
    font-size: 20px;
    text-align: center;
    vertical-align: central;
    text-shadow:
        0.05em 0 black,
        0 0.05em black,
        -0.05em 0 black,
        0 -0.05em black,
        -0.05em -0.05em black,
        -0.05em 0.05em black,
        0.05em -0.05em black,
        0.05em 0.05em black;
    }
</style>

@code {
    [Parameter] public NodeNodeModel Node { get; set; }
}
